{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "id",
      "title",
      "description"
    ],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^ISS-\\d{3}$"
      },
      "title": {
        "type": "string"
      },
      "description": {
        "type": "string"
      }
    }
  }
}